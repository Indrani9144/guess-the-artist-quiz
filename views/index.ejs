<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guess The Artist</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>üé® Guess the Artist</h1>

        <label for="category">Choose an artwork type:</label>
        <select id="category">
            <option value="">All</option>
            <option value="11">European Paintings</option>
            <option value="3">Sculptures</option>
            <option value="19">Photography</option>
            <option value="21">Modern & Contemporary Art</option>
        </select>
        <button id="filterButton">Apply Filter</button>

        <p id="score">‚úÖ Correct: 0 | ‚ùå Wrong: 0</p>
        <button id="resetScore">Reset Score</button>

        <% if (image) {
        <img src="<%= image %>" alt="Artwork">
        <h2>"<%= title %>"</h2>

        <div id="choices">
            <% choices.forEach(choice => { %>
                <button data-correct="<%= correct ? correct.replace(/"/g, '&quot;') : '' %>"><%= choice %></button>
            <% }); %>
        </div>        

        <p id="result"></p>
        <button onclick="window.location.reload()">Next Artwork</button>
        <% } else { %>
            <p>No artwork found for this category. Please try another category.</p>
        <% } %>
    </div>

    <script src="/script.js">
    </script>
</body>
</html>
